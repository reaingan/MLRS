    <script>
        // Loading screen animation
        const loadingScreen = document.getElementById('loadingScreen');
        const loadingBar = document.getElementById('loadingBar');
        const loadingPercentage = document.getElementById('loadingPercentage');
        const loadingStatus = document.getElementById('loadingStatus');
        
        // Loading messages
        const loadingMessages = [
            "Connecting to mainframe...",
            "Initializing security protocols...",
            "Loading tactical database...",
            "Establishing satellite link...",
            "Synchronizing global nodes...",
            "Finalizing system checks...",
            "Launch sequence initiated..."
        ];
        
        // Simulate loading progress
        let progress = 0;
        const loadingInterval = setInterval(() => {
            progress += Math.floor(Math.random() * 10) + 1;
            if (progress > 100) progress = 100;
            
            loadingBar.style.width = `${progress}%`;
            loadingPercentage.textContent = `${progress}%`;
            
            // Update status message at certain intervals
            if (progress % 25 === 0) {
                const randomMessage = loadingMessages[Math.floor(Math.random() * loadingMessages.length)];
                loadingStatus.textContent = randomMessage;
            }
            
            // Complete loading
            if (progress === 100) {
                clearInterval(loadingInterval);
                loadingStatus.textContent = "SYSTEM READY";
                
                // Fade out loading screen
                setTimeout(() => {
                    loadingScreen.style.opacity = '0';
                    setTimeout(() => {
                        loadingScreen.style.display = 'none';
                    }, 1000);
                }, 1000);
            }
        }, 150);
        
        // Enhanced animations and interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Animate keycards on hover
            const keycards = document.querySelectorAll('.keycard');
            keycards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.15) rotate(5deg)';
                    this.style.opacity = '1';
                    this.style.filter = 'drop-shadow(0 0 40px currentColor)';
                    this.style.zIndex = '1';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.opacity = '0.9';
                    this.style.filter = 'drop-shadow(0 0 25px currentColor)';
                    this.style.zIndex = '-1';
                });
            });
            
            // Button hover effects
            const buttons = document.querySelectorAll('.btn, .subscribe-btn');
            buttons.forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    const shadowColor = this.classList.contains('btn-discord') ? 'rgba(88, 101, 242, 0.5)' : 
                                      this.classList.contains('btn-server') ? 'rgba(196, 28, 59, 0.6)' : 
                                      'rgba(196, 28, 59, 0.7)';
                    this.style.boxShadow = `0 15px 30px ${shadowColor}`;
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                });
            });
            
            // Dynamic player count
            setInterval(function() {
                const countElement = document.querySelector('.player-count');
                const currentCount = parseInt(countElement.textContent.match(/\d+/)[0].replace(',', ''));
                const fluctuation = Math.floor(Math.random() * 20) - 10;
                const newCount = Math.max(1200, currentCount + fluctuation);
                const formattedCount = newCount.toLocaleString();
                countElement.textContent = `[${formattedCount}] ACTIVE OPERATIVES WORLDWIDE`;
                
                // Pulse effect when updating
                countElement.style.transform = 'scale(1.1)';
                countElement.style.textShadow = '0 0 20px var(--hud-green)';
                setTimeout(() => {
                    countElement.style.transform = 'scale(1)';
                    countElement.style.textShadow = '0 0 15px var(--hud-green)';
                }, 300);
            }, 5000);
            
            // Input focus effect
            const emailInput = document.querySelector('.email-input');
            emailInput.addEventListener('focus', function() {
                this.style.boxShadow = '0 0 25px rgba(196, 28, 59, 0.8)';
                this.style.borderColor = 'var(--fuchsia)';
            });
            
            emailInput.addEventListener('blur', function() {
                this.style.boxShadow = '';
                this.style.borderColor = 'var(--royal-blue)';
            });
            
            // Logo 3D tilt effect
            const logo = document.querySelector('.logo-placeholder');
            document.addEventListener('mousemove', (e) => {
                const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
                const yAxis = (window.innerHeight / 2 - e.pageY) / 25;
                logo.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
            });
        });
    </script>
</body>
</html>
